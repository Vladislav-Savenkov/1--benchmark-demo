	КодОрганизации = ПолучитьКодОрганизации();
	
	ИмяФайла = "Bnf_" + ?(Объект.РежимРаботы = 0, "0_", "1_") + Формат(КодОрганизации, "ЧВН=") + Формат(Объект.Период, "ДФ=yyyyMM") + ".xml";
	
